<aside class="sidebar col-lg-3 text-center">
  <nav>
    <ul>
      <li>
        <%= link_to "HOME", posts_path, id: "sidebar-home", class: "btn mb-4" %>
      </li>
      <li>
        <%= link_to "マイページ", user_path(current_user.id), id: "sidebar-mypage", class: "btn mb-4" %>
      </li>
      <li>
        <%= content_tag(:span, content_tag(:i, "", class: "fas fa-circle"), class: "notification-check") if unchecked_notificatons.any? %>
        <%= link_to "通知", notifications_path, id: "sidebar-notification", class: "btn mb-4" %>
      </li>
      <li>
        <%= link_to "リスト", user_lists_path(current_user), id: "sidebar-list", class: "btn mb-4" %>
      </li>
      <li>
        <%= link_to "新規投稿", new_post_path, id: "sidebar-new-post", class: "btn mb-4" %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, id: "sidebar-log-out",  method: :delete, class: "btn mb-4" %>
      </li>
      <li></li>
    </ul>
    <%= form_with url: search_path, method: :get do |f| %>
      <div class="col-10 mx-auto">
        <%= f.search_field :word, class: "form-control search-input mb-2" %>
        <%= button_tag sanitize('<i class="fa fa-search"></i>'), type: "submit", class: "search-btn btn-outline-success align-middle" %>
      </div>
    <% end %>
  </nav>
</aside>