<div class="row main-top">
  <div class="col-sm-10 col-md-8 col-lg-6 mx-auto m-3 p-5 login-form">
    <div class="row">
      <h4>管理者ログイン</h4>
    </div>
    <div>
      <%= form_with model: @admin, url: admin_session_path do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control py-4 my-5" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control py-4 my-5" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
