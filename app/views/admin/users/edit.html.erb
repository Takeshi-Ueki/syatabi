<div class="row main-top">
  <div class="col-12 col-lg-8 mx-lg-auto">
      <div class="row py-4">
        <div class="col-12 col-md-6 col-xl-5 text-center">
          <div>
            <%= image_tag @user.get_profile_image(150, 150), class: "profile-img" %>
          </div>
          <div class="py-3"><%= @user.name %></div>
        </div>
        <div class="col-12 col-md-6 col-xl-7">
          <% if @user.profile.blank? %>
            プロフィールを設定していません
          <% else %>
            <%= @user.profile %>
          <% end %>
        </div >
      </div>

      <div class="row">
        <div class="col-12 text-center">
          <%= link_to "アカウントをブロックする", admin_user_path(@user.id), method: :patch, class: "btn btn-danger" %>
        </div>
      </div>
  </div>
</div>