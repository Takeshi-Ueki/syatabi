<div class="row main-top">
  <div class="col-lg-6 offset-lg-1">
    <div class="row py-4">
      <div class="col-12 col-md-6 col-xl-5 text-center">
        <div><%= image_tag @user.get_profile_image(150, 150), class: "profile-img" %></div>
        <div class="py-3"><%= @user.name %></div>
      </div>
      <div class="col-12 col-md-6 col-xl-7">
        <% if @user.profile.blank? %>
          プロフィールを設定していません
        <% else %>
          <%= @user.profile %>
        <% end %>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-4">
        <strong><%= @user.followings.count %> </strong><%= link_to "フォロー中", user_followings_path(@user.id) %>
      </div>
      <div class="col-4">
        <strong><%= @user.followers.count %> </strong><%= link_to "フォロワー", user_followers_path(@user.id) %>
      </div>
      <div class="col-4">
        <%= link_to "行きたいところリスト", user_lists_path(@user) %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mb-5 py-5 text-center">
        <% if @user == current_user %>
          <%= link_to "編集する", edit_user_path, class: "btn btn-success btn-lg" %>
        <% elsif current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% @posts.each do |post| %>
      <% if post.user == current_user && post.is_active == false %>
          <div class="col-12 post-list">
            <%= link_to post_path(post.id) do %>
              <div class="my-5">
                <div class="p-3 text-center limit-post">
                  この投稿は管理者より制限されています
                </div>
                <div class="text-right mr-3">
                  <%= l post.created_at %>
                </div>
              </div>
            <% end %>
          </div>
        <% elsif post.user == @user && post.is_active == true %>

          <%= render 'posts_short', {post: post, size: [200, 200]} %>

        <% elsif post.is_active == false %>
          <!-- なにも表示しない -->
        <% else %>
          <div class="col-12 post-list">
            <%= link_to post_path(post.id) do %>
              <div class="mb-5">
                <div class="text-center">
                  <%= post.user.name %>さんの投稿をリポストしています
                </div>
                <div class="p-3 text-center">
                  <% post.images.each do |image| %>
                    <%= image_tag image.variant(resize_to_limit: [200, 200]), class: "m-1"%>
                  <% end %>
                </div>
                <div class="p-3">
                  <%= post.body %>
                </div>
                <div class="text-right mr-3">
                  <%= l post.created_at %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="col-lg-4 mx-auto px-5">
    <div class="row">
      <div class="col-12">
        <% @ranks.each do |rank| %>
          <div>
            <%= rank.post.body %>
            <%= rank.rank_i18n %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row mt-5 p-3 border-box">
      <div class="col-12 mb-3">
        <%= link_to "いいねした投稿", user_favorites_path(@user.id) %>
      </div>
      <% @favorite_posts.each do |post| %>

        <%= render 'posts_short', {post: post, size: [100, 100]}  %>

      <% end %>
      <div class="col-12 my-3 text-right">
        <%= link_to ">> 一覧を見る", user_favorites_path(@user.id) %>
      </div>
    </div>
  </div>
</div>