<div class="row main-top">
  <% posts.each do |post| %>
    <div class="col-12 col-md-10 col mx-auto pb-5 post-list">
      <%= link_to post_path(post.id) do %>
        <div class="row pt-3">
          <div class="col-12 text-center col-sm-3 offset-sm-1">
            <%= image_tag post.user.get_profile_image(100, 100), class: "profile-img" %>
          </div>
          <div class="col-12 px-3 col-sm-5">
            <%= post.body %>
          </div>
        </div>

        <div class="row">
          <% post.images.each do |image| %>
            <div class="mx-auto p-3">
              <%= image_tag image.variant(resize_to_limit: [550, 550]), class: "post-show-img" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>