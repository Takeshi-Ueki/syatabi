<%if @user.errors.any? %>
  <ul class="error-massege col-12">
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row main-top">
  <div class="col-10 offset-1">
    <%=form_with model: @user do |f| %>


      <div class="row">
        <div class="col-12 col-lg-2 offset-lg-2 text-center">
          <%= image_tag @user.get_profile_image(150, 150), class: "profile-img" %>
        </div>

        <div class=" col-12 col-sm-8 col-md-6 col-lg-5 mx-auto">
          <div class="form-group">
            <%= f.label :name, "名前", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="custom-file">
            <%= f.label :profile_image, "プロフィール画像", class: "custom-file-label" %>
            <%= f.file_field :profile_image, class: "custom-file-input" %>
          </div>
        </div>
      </div>


      <div class="row my-5">
        <div class="form-group col-12 col-md-10 mx-auto">
          <%= f.label :profile, "プロフィール(255文字まで)" %>
          <%= f.text_area :profile, rows: "10", class: "form-control" %>
        </div>
      </div>


      <div class="row mb-5">
        <div class="mx-auto">
          <%= f.submit "保存", class: "btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>

    <div class="row">
      ランキングがきます
    </div>
  </div>
</div>