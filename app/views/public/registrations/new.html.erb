<%= render 'shared/error', model: resource  %>

<div class="row main-top">
  <div class="col-sm-10 col-md-8 col-lg-6 mx-auto m-3 p-5 login-form border-box">
    <%= render "shared/notice" %>
    <div class="row">
      <h4>アカウントを作成</h4>
    </div>
    <div>
      <%= form_with model: @user, url: user_registration_path do |f| %>

        <div class="form-group">
          <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名", class: "form-control py-4 my-4" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-control py-4 my-4" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)", class: "form-control py-4 my-4" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control py-4 my-4" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="my-3">
        既に登録済みの方は<%= link_to "こちら", user_session_path %>からログインしてください
      </div>
    </div>
  </div>
</div>