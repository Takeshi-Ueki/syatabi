<% post = notification.post %>
  <% visitor = notification.visitor %>
  <% action = notification.action %>
  <div class="notifications my-3 py-2 pl-3">
    <% if action == "comment" %>
      <%= visitor.name %>さんが
      <% if post.user != current_user %>
        <%= link_to "#{post.user.name}さんの投稿", post_path(post.id) %>
      <% else %>
        <%= link_to "あなたの投稿", post_path(post.id) %>
      <% end %>
      にコメントしました
      <div class="notification-comment ml-3">
        - <%= notification.post_comment.comment %>
      </div>
    <% elsif action == "favorite" %>
      <%= visitor.name %>さんが
      <%= link_to "あなたの投稿", post_path(post.id) %>
      にいいねしました
    <% elsif action == "repost" %>
      <%= visitor.name %>さんが
      <%= link_to "あなたの投稿", post_path(post.id) %>
      をリポストしました
    <% elsif action == "follow" %>
      <%= link_to "#{visitor.name}", user_path(visitor.id) %>さんが
      あなたをフォローしました
    <% end %>
  </div>