<%= javascript_pack_tag 'post/show' %>

<div class="row main-top">
  <div class="col-12 col-xl-8 ml-xl-4">
    <div class="row align-items-center">
      <div class="col-sm-2 offset-sm-1">
        <%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image(100, 100), class: "profile-img" %>
        <% end %>
      </div>
      <div class="col-4 col-sm-2 text-center">
        <% if @post.favorited_by?(current_user) %>
          <%= link_to post_favorites_path(@post.id), method: :delete do %>
            <span class="favorite-true favorite-btn"><i class="fas fa-heart"></i></span>
          <% end %>
        <% else %>
          <%= link_to post_favorites_path(@post.id), method: :post do %>
            <span class="favorite-false favorite-btn"><i class="far fa-heart"></i></span>
          <% end %>
        <% end %>
      </div>
      <div class="col-5 col-sm-2">
        <%= link_to "#{@post.favorites.count}件のいいね",post_favorites_path(@post.id), class: "mt-3" %>
      </div>

      <% if @user == current_user %>
        <div class="col-sm-4 mr-3 text-center text-sm-right">
          <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-success btn-sm" %>
        </div>
        <div class= "col-11 mr-3 text-right">
          <%= link_to "削除", post_path(@post.id), method: :delete, class: "btn btn-danger btn btn-sm" %>
        </div>
      <% else %>
        <div class="col-4 col-sm-2 text-center">
          <% if @post.reposted_by?(current_user) %>
            <%= link_to post_reposts_path(@post.id), method: :delete do %>
              <span class="repost-true repost-btn"><i class="fas fa-retweet"></i></span>
            <% end %>
          <% else %>
            <%= link_to post_reposts_path(@post.id), method: :post do %>
              <span class="repost-false repost-btn"><i class="fas fa-retweet"></i></span>
            <% end %>
          <% end %>
        </div>
        <div class="col-sm-3">
          <% if @post.listed_by?(current_user) %>
            <%= link_to "リストから削除", post_lists_path(@post.id), method: :delete %>
          <% else %>
            <%= link_to "リストに追加", post_lists_path(@post.id), method: :post %>
          <% end %>
        </div>
      <% end %>
    </div>

    <% unless @post.is_active %>
      <div class="row mt-5">
        <div class="col-12 text-center limit-post">この投稿は管理者によって制限されています</div>
      </div>
    <% end %>

    <div class="row mt-5 px-5 py-2">
      <%= @post.body %>
    </div>

    <div class="row px-5">
      <% @post_tags.each do |tag| %>
        <%= link_to "##{tag.name}", search_tag_path(tag_id: tag.id), class: "pr-2"%>
      <% end %>
    </div>


    <div class="row">
      <div class="col-12 text-center">
        <% if @post.diary.present? %>
          <%= link_to "Diary #{@post.diary.title}", post_diary_path(@post.id, @diary.id) %>
        <% elsif @user == current_user %>
          <%= link_to "Diaryを作成する", new_post_diary_path(@post.id) %>
        <% else %>
          この投稿にはDiaryがまだありません
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-10 mx-auto text-right">
        <%= l @post.created_at %>
      </div>
    </div>

    <div class="row mt-3 mb-3">
      <% @post.images.each do |image| %>
        <div class="col-12 text-center py-3">
          <%= image_tag image.variant(resize_to_limit: [550, 550]), class: "post-show-img" %>
        </div>
      <% end %>
    </div>
  <div class="row">
    <div class="col-10 mx-auto show-map">
      <div id="map"></div>
    </div>
  </div>

  </div>
  <div class="col-12 col-xl-3 ml-xl-4">
    <%= form_with model: [@post, @post_comment] do |f| %>
      <div class="row my-3">
        <%= image_tag current_user.get_profile_image(75, 75), class: "profile-img ml-3" %>
      </div>

      <div class="row mb-3">
        <div class="form-group col-12">
          <%= f.text_area :comment, rows: '3', placeholder: "コメントを入力", class: "form-control" %>
        </div>
        <div class="col-12 text-right">
          <%= f.submit "送信する", class: "btn btn-primary comment-btn" %>
        </div>
      </div>
    <% end %>

    <% @post.post_comments.each do |post_comment| %>
      <div class="row my-4 comment-wrapper">
        <div class="col-12 my-3">
          <%= link_to(user_path(post_comment.user.id), class: "no-border") do %>
            <%= image_tag post_comment.user.get_profile_image(75, 75), class: "profile-img" %>
          <% end %>
          <span class="ml-2"><%= post_comment.user.name %></span>
          <% if post_comment.user == current_user %>
            <span class="comment-delete-btn mt-3">
              <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger comment-btn" %>
            </span>
          <% end %>
        </div>
        <div class="col-12 mb-2">
          <%= post_comment.comment %>
        </div>
        <div class="col-12 text-right">
          <%= l post_comment.created_at %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["MAP_API"] %>&callback=initMap"></script>