<%= javascript_pack_tag 'post/show' %>

<%= render 'shared/notice' %>

<div class="row main-top">
  <div class="col-12 col-xl-8 ml-xl-4">
    <div class="row align-items-center">
      <div class="col-12 col-sm-2 offset-sm-1 text-center">
        <%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image(100, 100), class: "profile-img" %>
        <% end %>
      </div>
      <div class="favorite-buttons-<%= @post.id %> col-12 col-sm-4 my-3">
        <%= render 'public/favorites/favorite', post: @post %>
      </div>
      <% if @user == current_user %>
        <div class="col-6 col-sm-4 mr-sm-3 text-center text-sm-right">
          <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-success btn-sm" %>
        </div>
        <div class= "col-6 col-sm-11 mr-sm-3 text-center text-sm-right">
          <%= link_to "削除", post_path(@post.id), method: :delete, class: "btn btn-danger btn btn-sm" %>
        </div>
      <% else %>
        <div class="repost-buttons-<%= @post.id %> col-4 col-sm-2 text-center">
          <%= render 'public/reposts/repost_btn', post: @post %>
        </div>
        <div class="col-sm-3">
          <% if @post.listed_by?(current_user) %>
            <%= link_to "リストから削除", post_list_path(@post.id), method: :delete %>
          <% else %>
            <%= link_to "リストに追加", post_lists_path(@post.id), method: :post %>
          <% end %>
        </div>
      <% end %>
    </div>

    <% unless @post.is_active %>
      <div class="row mt-5">
        <div class="col-12 text-center limit-post">この投稿は管理者によって制限されています</div>
      </div>
    <% end %>

    <div class="row mt-5 px-5 py-2">
      <%= @post.body %>
    </div>

    <div class="row px-5">
      <% @post_tags.each do |tag| %>
        <%= link_to "##{tag.name}", search_tag_path(tag_id: tag.id), class: "pr-2"%>
      <% end %>
    </div>


    <div class="row">
      <div class="col-12 text-center">
        <% if @post.diary.present? %>
          <%= link_to "Diary #{@post.diary.title}", post_diary_path(@post.id, @diary.id) %>
        <% elsif @user == current_user %>
          <%= link_to "Diaryを作成する", new_post_diary_path(@post.id) %>
        <% else %>
          この投稿にはDiaryがまだありません
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-10 mx-auto text-right">
        <%= l @post.created_at %>
      </div>
    </div>

    <div class="row mt-3 mb-3">
      <% @post.images.each do |image| %>
        <div class="col-12 text-center py-3">
          <%= image_tag image.variant(resize_to_limit: [550, 550]), class: "post-show-img" %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-10 mx-auto show-map">
        <div id="map"></div>
      </div>
    </div>

  </div>
  <div class="col-12 col-xl-3 ml-xl-4">
    <%= render partial: 'public/post_comments/form', locals: { post: @post, post_comment: @post_comment } %>

    <div class="comment-index-<%= @post.id %> row my-4 comment-wrapper">
      <%= render 'public/post_comments/index', post: @post %>
    </div>
  </div>
</div>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["MAP_API"] %>&callback=initMap"></script>