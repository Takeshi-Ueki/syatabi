<div class="col-5">
  <%= form_with model: list, url: post_list_path(post.id, list.id) do |f| %>
    <%= f.text_field :memo, placeholder: "メモ(50文字まで)" %>
    <% if list.memo.blank? %>
      <%= f.submit "作成", class: "btn btn-sm btn-primary list-btn" %>
    <% else %>
      <%= f.submit "更新", class: "btn btn-sm btn-success list-btn"  %>
    <% end %>
  <% end %>
</div>
