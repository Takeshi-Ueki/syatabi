<div class="form-group">
  <%= f.label :title, "タイトル(100文字まで)" %>
  <%= f.text_field :title, maxlength: 100, class:"form-control" %>
</div>

<div class="form-group">
  <%= f.label :body, "Diary 本文" %>
  <%= f.text_area :body, rows: 30, maxlength: 30000, class:"form-control" %>
</div>

<div class="text-center my-4">
  <div class="btn-group btn-group-toggle" data-toggle="buttons">
    <label class="btn active">
    <%= f.radio_button :is_public, true, checked: true %> 公開
    </label>
    <label class="btn">
    <%= f.radio_button :is_public, false %> 非公開
    </label>
  </div>
</div>