<div class="row main-top">
  <% if current_user?(@user) || @diary.is_public  %>
    <div class="col-11 col-lg-8 mx-auto">
      <%= render 'post_link', post: @post %>
      <div class="row my-5">
        <div class="col p-3 diary-box">
          <h2 class="p-1"><%= @diary.title %></h2>
          <div class="p-3">
            <%= @diary.body %>
          </div>
        </div>
      </div>

      <% if current_user?(@user) %>
        <%= render 'edit_buttons', { post: @post, diary: @diary } %>
      <% end %>
    </div>
  <% else %>
    <div class="col-8 mx-auto text-center">
      <h2>このDiaryは、非公開設定です</h2>
    </div>
  <% end %>
</div>